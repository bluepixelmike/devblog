<!-- entry -->

<div class="item">
  <a href="/devs/{{ author._slug }}" class="ui tiny image" title="{{ author.handle | escape }}">
    <img src="{% if author.avatar_type == 'Gravatar' %}{{ author.email | gravatar_url: 'd:mm', 's:80' | escape }}{% else %}{{ author.avatar | resize: '80x80#' | escape }}{% endif %}" alt="{{ author.handle | escape }}" class="ui avatar" />
  </a>
  <div class="content">
    <a href="/devs/{{ author._slug }}" class="header">
      <h3>
        {{ author.name | escape }}
        <span class="meta"><i class="at icon"></i> {{ author.handle | escape }}</span>
      </h3>
    </a>
    <div class="meta">{% if author.posts.size > 0 %}
      <a href="/devs/{{ author._slug }}/posts"><i class="newspaper icon"></i> {{ author.posts.size }} Post{% if author.posts.size != 1 %}s{% endif %}</a>{% endif %}{% if author.tutorials.size > 0 %}
      <a href="/devs/{{ author._slug }}/tutorials"><i class="book icon"></i> {{ author.tutorials.size }} Tutorial{% if author.tutorials.size != 1 %}s{% endif %}</a>{% endif %}{% if author.updates.size > 0 %}
      <a href="/devs/{{ author._slug }}/updates"><i class="bullhorn icon"></i> {{ author.updates.size }} Update{% if author.updates.size != 1 %}s{% endif %}</a>{% endif %}
    </div>
    <div class="description">
      <p>{{ author.brief | escape }}</p>
    </div>
    <div class="extra">
{% include 'tags_list' with tools: author.tools %}
    </div>
  </div>
</div>

<!-- /entry -->
