<!-- tutorial -->

<a href="/tutorials/{{ tutorial._slug }}" class="item" title="Jump to tutorial">
  <i class="book icon"></i>
  <div class="content">
    <span class="title">{{ tutorial.title | escape }}</span>{% if tutorial.featured %}
    <span class="ui mini label">
      <i class="star icon"></i>
      Featured
    </span>{% endif %}<br />
    <span class="meta">{{ tutorial.created_at | localized_date: '%A, %B %d, %Y' | escape }}</span>
    <span class="description">{{ tutorial.brief | escape }}</span>
  </div>
</a>

<!-- /tutorial -->
