-# Full listing entry for an update.
-# Required variables:
  update - Update to display information about

.item
  %a.image{ :href => '{% path_to update %}', :title => '{{ update.title | escape }}' }
    {% if update.image %}
    %img{ :src => '{{ update.image | resize: "175x100#" | escape }}', :alt => '{{ update.title | escape }}' }
    {% endif %}

  .content
    %a.header{ :href => '{% path_to update %}' }
      %h3 {{ update.title | escape }}
    {% if update.subtitle %}
    %h4 {{ update.subtitle | escape }}
    {% endif %}

    .meta
      {% include 'author_label' with author: update.author %}
      {% include 'post_date' with date: update.created_at %}
      {% include 'disqus_link' with obj: update %}

    .description
      %p {{ update.excerpt | escape }}

    .extra
      {% include 'tags_list' with tags: update.tags %}
