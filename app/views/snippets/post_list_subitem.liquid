<!-- post -->

<a href="/posts/{{ post._slug }}" class="item" title="Jump to post">
  <i class="newspaper icon"></i>
  <div class="content">
    <span class="title">{{ post.title | escape }}</span><br />
    <span class="meta">{{ post.created_at | localized_date: '%A, %B %d, %Y' | escape }}</span>
    <span class="description">{{ post.brief | escape }}</span>
  </div>
</a>

<!-- /post -->
