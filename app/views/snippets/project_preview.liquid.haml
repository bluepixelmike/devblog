%a.item{ :href => '{% path_to project %}' }
  %i.lab.icon
  .content
    %span.title {{ project.name | escape }}
    {% if post.featured %}
    %span.ui.mini.label
      %i.star.icon
      -# TODO: Localize
      :plain
        Featured
    {% endif %}
    %br/
    %span.meta {{ project.created_at | localized_date: '%A, %B %d, %Y' | escape }}
    %span.description {{ project.brief | escape }}
