<!-- entry -->

<div class="item">{% if post.featured %}
  <a href="/featured" class="ui red ribbon label">Featured</a>{% endif %}
  <a href="/posts/{{ post._slug }}" class="image" title="{{ post.title | escape }}">{% if post.image %}
    <img src="{{ post.image.url }}" alt="{{ post.title | escape }}" />{% endif %}
  </a>
  <div class="content">
    <a href="/posts/{{ post._slug }}" class="header"><h3>{{ post.title | escape }}</h3></a>
    <div class="meta">
{% include 'author_label' with author: post.author %}
      <span class="date"><i class="wait icon"></i> {{ post.created_at | localized_date: '%A, %B %d, %Y' | escape }}</span>{% if post.category %}
      <a href="/categories/{{ post.category._slug }}"><i class="folder open outline icon"></i> <span class="category">{{ post.category.name | escape }}</span></a>{% endif %}{% if post.allow_comments %}
      <a href="/posts/{{ post._slug }}#comments"><i class="comments outline icon"></i> <span class="disqus-comment-count" data-disqus-identifier="/posts/{{ post._slug }}">Comments</span></a>{% endif %}
    </div>
    <div class="description">
      <p>{{ post.brief | escape }}</p>
    </div>
    <div class="extra">
{% include 'tags_list' with tags: post.tags, tools: post.tools %}
    </div>
  </div>
</div>

<!-- /entry -->
