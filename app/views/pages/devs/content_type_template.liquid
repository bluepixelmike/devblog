---
title: Dev Profile
listed: true
published: true
content_type: authors
---
{% extends parent %}

{% block 'breadcrumbs' %}
<div id="breadcrumbs" class="ui inverted red segment">
  <div class="ui breadcrumb">
    <a href="/" class="section">Home</a>
    <div class="divider"> / </div>
    <a href="/devs" class="section">Developers</a>
    <div class="divider"> / </div>
    <span class="active section">{{ page.title | escape }}</span>
  </div>
</div>
{% endblock %}

{% block 'header' %}
    <img src="{% if author.avatar_type == 'Gravatar' %}{{ author.email | gravatar_url: 'd:mm', 's:60' }}{% else %}{{ author.avatar.url | escape }}{% endif %}" class="dev-icon" />
    <div class="content">
      {{ author.name | escape }}
      <span class="meta"><i class="at icon"></i> {{ author.handle | escape }}</span>
    </div>
{% endblock %}

{% block 'body/main' %}
<!-- dev -->

<div class="ui red segment">

<div class="right floated left aligned column">

<!-- avatar -->

<img src="{% if author.avatar_type == 'Gravatar' %}{{ author.email | gravatar_url: 'd:mm', 's:150' }}{% else %}{{ author.avatar.url | escape }}{% endif %}" class="ui small avatar image" />

<!-- /avatar -->{% if author.links.size > 0 %}

<!-- links -->

<div id="links">
  <h4 class="ui header">Links</h4>
  <div class="ui divided list">
{% for link in author.links %}
    <a href="{{ link.url | escape }}" class="item">
      <i class="{% if link.icon %}{{ link.icon | escape }}{% else %}linkify{% endif %} icon"></i>
      {{ link.name | escape }}
    </a>
{% endfor %}
  </div>
</div>

<!-- /links -->{% endif %}

  </div>

  <div class="main-content">
{{ author.content }}
  </div>
  <div class="extra">
{% include 'tags_list' with tools: author.tools %}
  </div>

  <div class="ui stackable grid">{% if author.updates.size > 0 %}

<!-- updates -->

<div id="updates" class="eight wide column">
  <h4 class="ui header">Latest Updates</h4>
  <div class="ui divided very relaxed list">
{% for update in author.updates %}{% if forloop.index0 < 3 %}
{% include 'update_list_subitem' with update %}
{% endif %}{% endfor %}
  </div>
  <a href="/devs/{{ author._slug }}/updates"><i class="angle double right icon"></i> View all ({{ author.updates.size }})</a>
</div>

<!-- /updates -->{% endif %}{% if author.posts.size > 0 %}

<!-- posts -->

<div id="posts" class="eight wide column">
  <h4 class="ui header">Latest Posts</h4>
  <div class="ui divided very relaxed list">
{% for post in author.posts %}{% if forloop.index0 < 3 %}
{% include 'post_list_subitem' with post %}
{% endif %}{% endfor %}
  </div>
  <a href="/devs/{{ author._slug }}/posts"><i class="angle double right icon"></i> View all ({{ author.posts.size }})</a>
</div>

<!-- /posts -->{% endif %}{% if author.tutorials.size > 0 %}

<!-- tutorials -->

<div id="tutorials" class="eight wide column">
  <h4 class="ui header">Latest Tutorials</h4>
  <div class="ui divided very relaxed list">
{% for tutorial in author.tutorials %}{% if forloop.index0 < 3 %}
{% include 'tutorial_list_subitem' with tutorial %}
{% endif %}{% endfor %}
  </div>
  <a href="/devs/{{ author._slug }}/tutorials"><i class="angle double right icon"></i> View all ({{ author.tutorials.size }})</a>
</div>

<!-- /tutorials -->{% endif %}{% if author.roles.size > 0 %}

<!-- roles -->

<div id="roles" class="eight wide column">
  <h4 class="ui header">Project Roles</h4>
  <div class="ui divided very relaxed list">
{% for role in author.roles %}{% if forloop.index0 < 3 %}
{% include 'project_list_subitem' with project: role.project, role %}
{% endif %}{% endfor %}
  </div>
  <a href="/devs/{{ author._slug }}/roles"><i class="angle double right icon"></i> View all ({{ author.roles.size }})</a>
</div>

<!-- /roles -->{% endif %}

  </div>
</div>

<!-- /dev -->
{% endblock %}
